.create-post-container
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 100%
  position relative
  .loading-screen
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    background rgba(255, 255, 255, 0.5)
  .create-post
    width 90%
    margin 0px auto 30px
    .create-post-header
      display flex
      color var(--primary-color)
      margin-bottom 20px
      font-family "Lato"
      .profile-details
        width 100%
        display flex
        justify-content flex-start
        align-items center
        .profile-image
          display block
          height 50px
          width 50px
          border-radius 50%
          img
            border 2px solid var(--primary-color)
            height 50px
            width 50px
            border-radius 50%
            object-fit cover
        .profile-name
          display block
          h4
          p
            margin 0px 20px
      .post-details
        width 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
        font-weight bold
    .create-post-body
      .form-input
        width 100%
        margin-bottom 15px
        input[type="text"]
        textarea
          font-family "Lato"
          width 100%
          color var(--primary-color)
          background transparent
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          padding 6px 12px
          resize none
          &::placeholder
            color var(--black-color)
        .input-group
          display flex
          justify-content center
          align-items center
          margin 0px -5px
          label
            font-family "Lato"
            color var(--secondary-color)
            background var(--primary-color)
            padding 6px 12px
            border-radius 4px
            border 1px solid var(--dark-primary-color)
            margin 0px 5px
          input[type="text"]
            margin 0px 5px
        .file-upload
          display flex
          justify-content center
          align-items center
          margin 0px -5px
          .file-upload-button
            margin 0px 5px
            width 100%
            font-family "Lato"
            background var(--primary-color)
            color var(--secondary-color)
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            text-align center
            .file-upload-instruction
              padding 6px 12px
          .file-name
            margin 0px 5px
            padding 6px 12px
            background var(--secondary-color)
            color var(--primary-color)
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            width 100%
            font-family "Lato"
            text-align center
          input[type="file"]
            display none
    .create-post-footer
      .form-input
        width 100%
        input[type="submit"]
          width 100%
          padding 6px 12px
          background var(--primary-color)
          color var(--secondary-color)
          font-family "Lato"
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          cursor pointer