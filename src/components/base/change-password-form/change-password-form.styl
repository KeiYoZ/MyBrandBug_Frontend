.change-password-form
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 100%
  position relative
  .loading-screen
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    background rgba(255, 255, 255, 0.5)
  h1
    width 100%
    text-align left
    color var(--primary-color)
  .form
    width 100%
    .form-group
      width 100%
      margin 5px -5px
      display flex
      justify-content center
      @media screen and (max-width: 768px)
        margin 5px -5px
      .form-input
        font-family "Lato"
        width 100%
        background transparent
        color var(--black-color)
        padding 6px 12px
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        margin 0 5px
        box-shadow 1px 1px 3px var(--dark-primary-color)
        &::placeholder
          color var(--black-color)
      .label-for-input
        font-family "Lato"
        width 100%
        display flex
        align-items center
        justify-content center
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        margin 0px 5px
        padding 0px 10px
        box-shadow 1px 1px 3px var(--dark-primary-color)
      .submit
        min-width 200px
        width 33%
        padding 10px 0
        text-transform uppercase
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        font-family "Lato"
        margin 0px 5px
        box-shadow 1px 1px 3px var(--dark-primary-color)
        cursor pointer
        &:focus
          outline none
    .form-error
      width 100%
      text-align center
      font-family "Lato"
      color var(--primary-color)
  .change-password-alert
    font-family "Lato"
    color var(--primary-color)
    h1
      text-align center