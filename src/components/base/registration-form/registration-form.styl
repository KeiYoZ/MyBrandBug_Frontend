.registration-form
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 100%
  background rgba(255, 255, 255, 0.53)
  padding 20px 50px
  position relative
  @media screen and (max-width: 768px)
    padding 20px
  .loading-screen
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
  .loading
    visibility hidden
  .form
    width 100%
    h1
      font-family "Lato"
      color var(--primary-color)
      margin 10px 0
      width 100%
    .form-group
      width 100%
      margin 5px -5px
      display flex
      justify-content center
      @media screen and (max-width: 768px)
        margin 5px -5px
        h1
          margin 0
      .form-input
        font-family "Lato"
        width 100%
        background transparent
        color var(--black-color)
        padding 6px 12px
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        margin 0 5px
        &:focus, &:active,
          outline none
        &::placeholder
          color var(--black-color)
      .label-for-input
        font-family "Lato"
        display flex
        align-items center
        justify-content center
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--darken-primary-color)
        border-radius 4px
        margin 0 5px
        padding 0 10px
      .avatar-form-container
        width 100%
        .avatar-label-header
          width 100%
          text-align center
          font-family "Lato"
          color var(--primary-color)
        .avatar-select-container
          width 100%
          display flex
          justify-content center
          align-items center
          margin 20px 0
          @media screen and (max-width: 768px)
            align-items flex-start
          .avatar
            display flex
            justify-content center
            align-items center
            flex-direction column
            width 100%
            text-align center
            .avatar-radio
              display none
              margin 0
              padding 0
              &:active+.avatarLabel
                opacity 0.9
              &:checked+.avatarLabel
                filter(none)
            .avatarLabel
              display inline-block
              width 75px
              height 75px
              max-width 75px
              max-height 75px
              transition(all 100ms ease-in)
              filter(brightness(1) grayscale(1) opacity(0.2))
              border 1px solid var(--dark-primary-color)
              border-radius 50%
              position relative
              @media screen and (max-width: 768px)
                width 50px
                height 50px
                max-width 50px
                max-height 50px
              &:before
                content " "
                position absolute
                top -5px
                right -5px
                bottom -5px
                left -5px
                border 4px solid var(--primary-color)
                border-radius 50%
              &:hover
                filter(brightness(1.2), grayscale(0.5), opacity(0.9))
              &#kingBeetleLabel
                background url(../../../assets/images/wc-icon-kingbeetle.png)
                background-size cover
                background-repeat no-repeat
              &#queenBeeLabel
                background url(../../../assets/images/wc-icon-queenbee.png)
                background-size cover
                background-repeat no-repeat
              &#butterflyLabel
                background url(../../../assets/images/wc-icon-butterfly.png)
                background-size cover
                background-repeat no-repeat
            .caption
              font-family "Lato"
              color var(--primary-color)
              margin-top 20px
      .terms-conditions-form-container
        width 100%
        display flex
        justify-content center
        align-items center
        font-family "Lato"
        color var(--primary-color)
        .terms-checkbox
          width unset
          display none
          &+label
            background transparent
            border 1px solid var(--dark-primary-color)
            border-radius 3px
            padding 9px
            display inline-block
            position relative
            height 9px
            width 9px
            margin 0 10px
          &:checked+label:after
            content '\2714'
            font-size 14px
            position absolute
            top -2px
            left 4px
            color var(--primary-color)
        .modal-openner
          font-weight bold
          text-decoration underline
          cursor pointer
      .submit
        width 100%
        padding 10px 0
        text-transform uppercase
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        font-family "Lato"
        &:focus
          outline none
    .form-error
      width 100%
      text-align center
      font-family "Lato"
      color var(--primary-color)
.registration-success-alert
  font-family "Lato"
  color var(--primary-color)