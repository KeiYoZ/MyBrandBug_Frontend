.white-navbar
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  background var(--secondary-color)
  .brand-container
    height 100%
    width 250px
    text-align center
    @media screen and (max-width: 1200px)
      width 250px
    .route-links
      .brand
        height 100%
  .navbar
    padding 0px 20px 0px 0px
    margin 0px 0px 0px 20px
    width calc(100% - 250px)
    position relative
    height 100%
    display flex
    align-items center
    border-bottom 1px solid var(--primary-color)
    @media screen and (max-width: 1200px)
      width calc(100% - 250px)
    .nav-list
      width 100%
      display flex
      justify-content space-between
      align-items center
      list-style-type none
      padding 0
      .tagline
        font-family "Lato"
        color var(--primary-color)
      .controls
        display flex
        justify-content flex-end
        .search
          display flex
          .button-search
            padding 6px 12px
            background var(--primary-color)
            color var(--secondary-color)
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            font-family "Lato"
            margin 0 5px
            cursor pointer
            &:focus, &:active
              outline none
          .text-search
            padding 6px 12px
            border 1px dashed var(--dark-primary-color)
            border-radius 4px
            outline none
            font-family "Lato"
            &::placeholder
              color var(--black-color)
        .crickets
          position relative
          .count
            position absolute
            top -15px
            right 0px
            background var(--secondary-color)
            color var(--primary-color)
            border-radius 32px
            border 1px solid var(--dark-primary-color)
            padding 0px 5px
        .control-button
          padding 6px 12px
          margin 0px 10px
          text-transform uppercase
          background var(--primary-color)
          color var(--secondary-color)
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          font-family "Lato"
          box-shadow 2px 2px 10px var(--dark-primary-color)
          cursor pointer
        .control-input
          padding 6px 12px
          background var(--secondary-color)
          color var(--primary-color)
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          font-family "Lato"
          &:focus, &:active
            outline-color var(--dark-primary-color)
.logout-alert
  font-family "Lato"
  color var(--primary-color)
  .logout-alert-button
    padding 6px 12px
    text-transform uppercase
    background var(--primary-color)
    color var(--secondary-color)
    border 1px solid var(--dark-primary-color)
    border-radius 4px
    font-family "Lato"
    cursor pointer