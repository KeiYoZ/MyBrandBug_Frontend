.white-navbar-mobile
  width 100%
  display flex
  justify-content center
  align-items center
  .brand-container
    width 200px
    .route-links
      .brand
        width 200px
    @media screen and (max-width: 768px)
      width 100px
      .route-links
        .brand
          width 100px
  .navbar
    width 100%
    .tagline
      color var(--primary-color)
      margin-bottom 10px
    .controls
      display flex
      justify-content space-between
      align-items center
      padding 0 5px
      .search
        width 100%
        margin 0 5px
        display flex
        justify-content center
        align-items center
        .search-form
          padding 6px 12px
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          width 100%
          font-family "Lato"
          margin 0 5px
        .submit
          padding 6px 12px
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          min-width 100px
          width 100%
          font-family "Lato"
          background var(--primary-color)
          color var(--secondary-color)
          margin 0 5px
          cursor pointer
      .crickets-container
        .crickets
          padding 6px 12px
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          min-width 100px
          width 100%
          font-family "Lato"
          background var(--primary-color)
          color var(--secondary-color)
          cursor pointer
    .controls-2
      display flex
      justify-content flex-start
      align-items center
      padding 0 5px
      @media screen and (max-width: 767px)
        justify-content center
      .control-button
        width 100%
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        padding 6px 12px
        max-width 200px