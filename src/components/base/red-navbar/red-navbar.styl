clip-path(n)
  -webkit-clip-path n 
  -moz-clip-path n
  clip-path n
.red-navbar
  width 100%
  display flex
  min-height 60px
  .media-query-laptop-above
    width 100%
    .flex-nav
      width 100%
      display flex
      justify-content flex-end
      align-items center
      list-style-type none
      padding 0
      min-height 100%
      .router-link
        text-decoration none
        color var(--secondary-color)
        .nav-items
          padding 20px
          text-transform uppercase
  .media-query-tablet-below
    width 100%
    display flex
    justify-content center
    &.toggled
      display flex
    .button-toggle
      width 100%
      background transparent
      border 0
      padding 10px
      color var(--secondary-color)
      font-size 1em
      text-transform uppercase
      &:active, &:focus
        outline none
    .flex-nav
      width 100%
      list-style-type none
      padding 0
      min-height 100%
      .router-link
        width 100%
        text-decoration none
        color var(--secondary-color)
        .nav-items
          text-transform uppercase
          text-align center
          width 100%
          padding 10px
          .brand-logo
            height 50px
          &.ribbon-container
            position relative
            .ribbon-outline
              top -30px
              position absolute
              background grey
              width 100%
              height 200px
              clip-path(polygon(0% 0%, 100% 0%, 100% 100%, 50% 75%, 0% 100%))
              .ribbon
                width calc(100% - 2px)
                height calc(100% - 2px)
                background white
                clip-path(polygon(0% 0%, 100% 0%, 100% 100%, 50% 75%, 0% 100%))
                .visible-content
                  height 75%
                  display flex
                  justify-content center
                  align-items center
                  .brand-logo
                    display block
                    width 75%