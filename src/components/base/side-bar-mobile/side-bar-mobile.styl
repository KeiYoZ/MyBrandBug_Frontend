.side-bar-mobile-container
  .sidebar-toggle
    position absolute
    left 0
    top 0
    padding 30px
    background var(--primary-color)
    color var(--secondary-color)
    border 1px solid var(--dark-primary-color)
    border-radius 4px
    &:active, &:focus
      outline none
    @media screen and (max-width: 768px)
      padding 15px
  .side-bar-mobile
    width 100%
    background var(--primary-color)
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    &.toggled
      display none
    .profile-container
      .profile-image-container
        display flex
        justify-content center
        .profile-image
          width 100px
          height 100px
          border-radius 50%
          box-shadow 3px 3px 20px var(--dark-primary-color)
          cursor pointer
    .navigation-container
      width 100%
      display flex
      .side-nav
        width 100%
        padding 0 0 0 20px
        a
          color var(--secondary-color)
          text-decoration none
        .nav-item
          display flex
          justify-content flex-start
          align-items center
          width 100%
          list-style none
          font-family "Lato"
          padding 10px 0
    .buttons-container
      display flex
      justify-content center
      align-items center
      flex-direction column
      width 100%
      .button
        width 150px
        margin 5px 0
        background var(--secondary-color)
        color var(--primary-color)
        text-transform uppercase
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        cursor pointer
  .logout-alert
    font-family "Lato"
    color var(--primary-color)
    .logout-alert-button
      padding 6px 12px
      text-transform uppercase
      background var(--primary-color)
      color var(--secondary-color)
      border 1px solid var(--dark-primary-color)
      border-radius 4px
      font-family "Lato"
.enlarged-profile-image
  width 100%