.login-form
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 100%
  background rgba(255, 255, 255, 0.53)
  padding 20px 50px
  position relative
  @media screen and (max-width: 768px)
    padding 20px
  .loading-screen
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
  .loading
    visibility hidden
  .form
    width 100%
    h1
      font-family "Lato"
      color var(--primary-color)
      margin 10px 0
      width 100%
    .form-group
      width 100%
      margin 5px -5px
      display flex
      justify-content center
      @media screen and (max-width: 768px)
        margin 5px -5px
        h1
          margin 0
      .form-input
        font-family "Lato"
        width 100%
        background transparent
        color var(--black-color)
        padding 6px 12px
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        margin 0 5px
        &:focus, &:active
          color var(--primary-color)
        &::placeholder
          color var(--black-color)
      .remember-me-form-container
        width 100%
        display flex
        justify-content flex-start
        align-items center
        font-family "Lato"
        color var(--primary-color)
        .remember-me-checkbox
          width unset 
          display none
          &+label
            background transparent
            border 1px solid var(--dark-primary-color)
            border-radius 3px
            padding 9px
            display inline-block
            position relative
            height 9px
            width 9px
            max-height 9px
            max-width 9px
            margin 0 10px
          &:checked+label:after
            content '\2714'
            font-size 14px
            position absolute
            top -2px
            left 4px
            color var(--primary-color)
      .forgot-password-container
        width 100%
        text-align left
        margin 0 5px
        .forgot-password
          color var(--primary-color)
          font-family "Lato"
          text-decoration "none"
      .submit
        width 200px
        padding 10px 0
        text-transform uppercase
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        font-family "Lato"
        &:focus
          outline none
    .form-error
      font-family "Lato"
      color var(--primary-color)
      text-align center
.login-alert
  font-family "Lato"
  color var(--primary-color)