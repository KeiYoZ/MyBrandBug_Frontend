.reset-password-form
  display flex
  justify-content center
  align-items center
  flex-direction column
  width 100%
  background rgba(250, 250, 250, 0.53)
  padding 20px 50px
  position relative
  @media screen and (max-width: 768px)
    padding 20px
  .loading-screen
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
  .loading
    visibility hidden
  .form
    width 100%
    text-align center
    h1
      font-family "Lato"
      color var(--primary-color)
      margin 10px 0
      width 100%
    .form-group
      width 100%
      margin 5px -5px
      display flex
      justify-content center
      @media screen and (max-width: 768px)
        margin 5px -5px
        h1
          margin 0
      .form-input
        font-family "Lato"
        width 100%
        background transparent
        color var(--black-color)
        padding 6px 12px
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        margin 0px 5px
        &::placeholder
          color var(--black-color)
      .submit
        width 200px
        padding 10px 0
        text-transform uppercase
        background var(--primary-color)
        color var(--secondary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        font-family "Lato"
    .form-error
      font-family "Lato"
      color var(--primary-color)
      text-align center
.reset-password-alert
  font-family "Lato"
  color var(--primary-color)