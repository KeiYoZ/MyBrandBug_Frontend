.maintenance-page
  width 100%
  height 100%
  color var(--primary-color)
  display flex
  justify-content center
  align-items center
  .box
    border 1px dashed var(--primary-color)
    padding 100px 75px
    display flex
    justify-content center
    align-items center
    flex-direction column
  @media screen and (max-width: 768px)
    margin-top 50px
    .box
      display flex
      padding 50px 0
      justify-content center
      text-align center