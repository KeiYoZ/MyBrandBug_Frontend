.search-page-container
  width 100%
  .media-query-laptop-above
    .search-page
      display flex
      width 100%
      .search-results
        width 100%
        padding 0 20px
        .search-results-text
          width 100%
          margin 0 auto
          font-family "Lato"
          color var(--primary-color)
          border-bottom 1px solid grey
          display flex
          justify-content center
          align-items center
        .search-results-box
          width 100%
          font-family "Lato"
          color var(--primary-color)
          .search-result
            width 100%
            display flex
            justify-content space-between
            align-items center
            border-bottom 1px solid grey
            padding 20px
            .image-name-group
              display flex
              justify-content flex-start
              align-items center
              width 100%
              .search-image
                height 100px
                width 100px
                object-fit cover
                margin-right 12px
            .action-group
              width 100%
              display flex
              justify-content flex-end
              align-items center
            .action
              width 150px
              padding 12px 16px
              font-family "Lato"
              background var(--primary-color)
              color var(--secondary-color)
              border 1px solid var(--dark-primary-color)
              border-radius 4px
              margin 0 5px
              cursor pointer
              &:focus, &:active
                outline none
              &.pest
                background var(--black-color)
                border 1px solid var(--black-color)
  .media-query-tablet-below
    .search-page
      display flex
      width 100%
      margin-top 50px
      .search-results
        width 100%
        .search-results-text
          width 100%
          font-family "Lato"
          color var(--primary-color)
          border-bottom 1px solid grey
          display flex
          justify-content center
          align-items center
        .search-results-box
          width 100%
          font-family "Lato"
          color var(--primary-color)
          .search-result
            width 100%
            display flex
            justify-content space-between
            align-items center
            border-bottom 1px solid grey
            padding 20px 0
            .image-name-group
              display flex
              justify-content flex-start
              align-items center
              width 100%
              margin-left 12px
              .search-image
                width 50px
                height 50px
                object-fit cover
                margin-right 12px
            .action-group
              width 100%
              display flex
              justify-content flex-end
              align-items center
              flex-direction row
              @media screen and (max-width: 767px)
                width 50%
                flex-direction column
              .action
                padding 6px 12px
                font-family "Lato"
                background var(--primary-color)
                color var(--secondary-color)
                border 1px solid var(--dark-primary-color)
                border-radius 4px
                margin 0 5px
                cursor pointer
                @media screen and (max-width: 767px)
                  padding 12px 18px
                  margin 5px 0
                &:focus, &:active
                  outline none
                &.pest
                  background var(--black-color)
                  border 1px solid var(--black-color)