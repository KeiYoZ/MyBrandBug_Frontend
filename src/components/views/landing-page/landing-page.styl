.landing-page
  width 100%
  height 100%
  display flex
  justify-content flex-end
  align-items center
  color var(--secondary-color)
  .media-query-laptop-above
    .second-half
      display flex
      justify-content center
      align-items center
      flex-direction column
      width 50%
      .greetings
        width 480px
        text-shadow:
          2px 2px 0 #000,
          -1px -1px 0 #000,
          1px -1px 0 #000,
          -1px 1px 0 #000,
          1px 1px 0 #000
      .highlight
        color var(--primary-color)
      .buttons
        width 480px
        display flex
        justify-content center
        align-items center
        margin 0 -5px
        padding 10px 0
        .button-link
          width 100%
          margin 0 5px
          background var(--primary-color)
          color var(--secondary-color)
          padding 10px 12px
          border 1px solid var(--dark-primary-color)
          border-radius 4px
          text-transform uppercase
          font-family "Lato"
          cursor pointer
          text-decoration none
          display flex
          justify-content center
          &:active, &:focus
            outline none
  .media-query-tablet-below
    width 100%
    display flex
    justify-content center
    align-items center
    flex-direction column
    .heading
    .greetings
      width 80%
      margin 20px auto
      color var(--primary-color)
    .login-form
      display flex
      justify-content center
      align-items center
      flex-direction column
      width 90%
      background rgba(255, 255, 255, 0.53)
      padding 20px 20px
      position relative
      .loading-screen
        position absolute
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center
      .loading
        visibility hidden
      h1
        text-align left
        color var(--primary-color)
        width 100%
      .form
        width 100%
        .form-group
          width 100%
          margin 5px -5px
          display flex
          justify-content center
          @media screen and (max-width: 768px)
            margin 5px -5px
          .form-input
            font-family "Lato"
            width 100%
            background transparent
            color var(--black-color)
            padding 6px 12px
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            margin 0 5px
            &:focus, &:active
              color var(--primary-color)
            &::placeholder
              color var(--black-color)
          .submit
            width 200px
            padding 10px 0
            text-transform uppercase
            background var(--primary-color)
            color var(--secondary-color)
            border 1px solid var(--dark-primary-color)
            border-radius 4px
            font-family "Lato"
            margin 0px 5px
            &:focus
              outline none
    .registrationFormContainer
      width 90%
.login-alert
  font-family "Lato"
  color var(--primary-color)