.edit-profile
  width 100%
  min-height 600px
  display flex
  align-items flex-start
  .media-query-laptop-above
    width 100%
    height 600px
    display flex
    align-items flex-start
    .divider
      width 100%
      max-height 580px
      display flex
      flex-direction column
      justify-content center
      align-items center
      &#right
        height inherit
      .container
        width 100%
        max-height 580px
        overflow-x hidden
        overflow-y auto
        .edit-image
          width 500px
          margin 0 auto
          display flex
          .image-container
            width 200px
            height 200px
            .image
              width 100%
              height 100%
              border 1px solid var(--dark-primary-color)
              border-radius 50%
              box-shadow 2px 2px 10px var(--dark-primary-color);
              object-fit cover
          .button-container
            width calc(100% - 200px)
            display flex
            justify-content center
            align-items flex-end
            margin 0px -5px
            label
              font-family "Lato"
              color var(--secondary-color)
              background var(--primary-color)
              border-radius 4px
              border 1px solid var(--dark-primary-color)
              margin 0 5px
              width 100%
              box-shadow 1px 1px 3px var(--dark-primary-color)
              .file-upload-instruction
                text-align center
                padding 6px 12px
            .file-name
              margin 0px 5px
              padding 6px 12px
              background var(--secondary-color)
              color var(--primary-color)
              border 1px solid var(--dark-primary-color)
              border-radius 4px
              width 100%
              font-family "Lato"
              text-align center
            input[type="file"]
              display none
        .editProfileForm
          width 500px
          margin 0 auto
          display block
        .changePasswordForm
          width 500px
          margin 0px auto
          display block
  .media-query-tablet-below
    .whole
      width 90%
      margin 0 auto
      display flex
      flex-direction column
      justify-content center
      align-items center
      .container
        width 100%
        .edit-image
          display flex
          .image-container
            margin 0 10px
            .image
              width 75px
              height 75px
              border 1px solid var(--dark-primary-color)
              border-radius 50%
              box-shadow 2px 2px 10px var(--dark-primary-color)
              object-fit cover
          .button-container
            width 100%
            display flex
            justify-content center
            align-items flex-end
            margin 0 -5px
            .file-upload-button
              font-family "Lato"
              color var(--secondary-color)
              background var(--primary-color)
              border-radius 4px
              border 1px solid var(--dark-primary-color)
              margin 0 5px
              width 100%
              box-shadow 1px 1px 3px var(--dark-primary-color)
              cursor pointer
              .file-upload-instruction
                text-align center
                padding 6px 12px
            .file-name
              margin 0 5px
              padding 6px 12px
              background var(--secondary-color)
              color var(--primary-color)
              border 1px solid var(--dark-primary-color)
              border-radius 4px
              width 100%
              font-family "Lato"
              text-align center
            #profile-picture-upload
              display none
        .editProfileForm
          width 100%
          display block
        .changePasswordForm
          width 100%
          display block