.brand-solutions-page
  width 100%
  display flex
  justify-content center
  align-items center
  .media-query-laptop-above
    width 100%
    .brand-solutions
      color var(--primary-color)
      width 50%
      margin 0px auto
      h1
        margin 0 0 10px
      p
        color var(--black-color)
        margin 10px 0
      button
        background var(--primary-color)
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        padding 6px 12px
        color var(--secondary-color)
  .media-query-tablet-below
    width 100% 
    .heading
    .greetings
      width 80%
      margin 20px auto
      color var(--primary-color)
    .brand-solutions
      width 60%
      margin 0px auto
      @media screen and (max-width: 768px)
        width 80%
        margin 0px auto
      h1
      h2
      h3
        color var(--primary-color)
        margin 0 0 10px
      button
        padding 6px 12px
        border 1px solid var(--dark-primary-color)
        border-radius 4px
        background var(--primary-color)
        color var(--secondary-color)
      p
        margin 10px 0